<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'show', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>

    <div class="offset-md-1"></div>

    <div class="col-md-8">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "show", user_path(user.id) if user == current_user %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>