<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>
  <label for="inputName">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"タイトル"%>
  <label for="inputIntroduction">Body</label>
  <%= f.text_area :body, id:"inputIntroduction", placeholder:"内容"%>
  <%= f.submit "Update Book" ,class: 'btn btn-success'%>
<% end %>
<%= link_to 'Back', books_path, class: 'btn btn-primary' %>
