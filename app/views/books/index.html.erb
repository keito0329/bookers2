<%= render 'users/show', user: @user %>
<%= render 'new', book: @book %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Opinion</th>
      <th>User Name</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td><%= book.body %></td>
        <td><%= book.user.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>