<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/show', user: @user %>
      <%= render 'new', book: @book %>
    </div>

    <div class="offset-md-1"></div>

    <div class="col-md-8">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(100,100) %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>